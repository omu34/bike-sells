<!-- filepath: sections/custom-heading.liquid -->
<div class="custom-heading-section">
  <h2>{{ section.settings.heading_text }}</h2>
</div>

<style>
.custom-heading-section h2 {
  text-align: center;
  font-weight: bold;
  color: #5b06e4;
}
</style>

{% schema %}
{
  "name": "Custom Heading",
  "tag":"section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Your Bold White Heading"
    }
  ],
  "presets": [
    {
      "name": "Custom Heading",
      "category": "Text"
    }
  ]
}
{% endschema %}